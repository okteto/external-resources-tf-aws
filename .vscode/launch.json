{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Live debug menu",
        "type": "node",
        "request": "attach",
        "address": "localhost",
        "port": 9229,
        "localRoot": "${workspaceFolder}/menu",
        "remoteRoot": "/usr/src/app",
        "skipFiles": ["<node_internals>/**"]
      },
      {
        "name": "Live debug kitchen",
        "type": "go",
        "request": "attach",
        "mode": "remote",
        "remotePath": "/usr/src/app",
        "port": 2345,
        "host": "127.0.0.1",
        "cwd": "${workspaceFolder}/kitchen"
      }
    ]
  }